{
  "extends": ["next/core-web-vitals"],
  "rules": {
    // 3.3 Start a Codeblock's Curly Braces on the Same Line
    "brace-style": ["error", "1tbs"],
    
    // 3.4 Separate your statements properly
    "semi": ["error", "always"],
    "no-unexpected-multiline": "error",
    
    // 3.5 Name your functions
    "func-names": "error",
    
    // 3.6 Use naming conventions
    "camelcase": ["error", { "properties": "always" }],
    
    // 3.7 Prefer const over let
    "prefer-const": "error",
    "no-var": "error",
    
    // 3.8 Require modules first
    "global-require": "error",
    
    // 3.10 Use the === operator
    "eqeqeq": ["error", "always"],
    
    // 3.11 Use Async Await
    "prefer-await": "error",
    
    // 3.12 Use arrow function expressions
    "prefer-arrow-callback": "error",
    
    // 3.13 Avoid effects outside of functions
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Program > :not(FunctionDeclaration, FunctionExpression, ArrowFunctionExpression, ClassDeclaration, ClassExpression, VariableDeclaration, ImportDeclaration, ExportNamedDeclaration, ExportDefaultDeclaration, ExportAllDeclaration)",
        "message": "Avoid effects outside of functions"
      }
    ]
  }
} 